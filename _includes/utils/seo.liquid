{%- capture PAGE_TITLE -%}
	{%- if page.project -%}
		{{ ' — ' | prepend: site.title | append: page.project }}
	{%- elsif page.title !='' -%}
		{{ ' — ' | prepend: site.title | append: page.title }}
	{%- endif -%}
{%- endcapture -%}
{%- capture PAGE_DESCRIPTION -%}
	{%- if page.description == '' -%}
		{{  TRANSLATE_LANG.description }}
		{%- else -%}
		{{ page.description }}
	{%- endif -%}
{%- endcapture -%}
{%- capture PAGE_URL -%}{{ site.url | append: page.url }}{%- endcapture -%}
{%- capture PAGE_TYPE -%}website{%- endcapture -%}
{%- capture PAGE_PUBDATE -%}
    {%- if page.date -%}
        {{page.date}}
    {%- else -%}
        {{ site.time | date_to_xmlschema }}
    {%- endif -%}
{%- endcapture -%}
{%- capture PAGE_MODIFIDATE -%}
    {%- if page.last_modified_at -%}
        {{ page.last_modified_at | date: date_format }}
    {%- else -%}
        {%- if page.date -%}
            {{ page.date }}
        {%- else -%}
            {{ site.time | date_to_xmlschema }}
        {%- endif -%}
    {%- endif -%}
{%- endcapture -%}